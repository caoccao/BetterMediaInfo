{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "withGlobalTauri": true,
    "devPath": "http://localhost:1421",
    "distDir": "../build"
  },
  "package": {
    "productName": "Better Media Info",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "os": {
        "all": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": true,
        "close": true
      }
    },
    "windows": [
      {
        "title": "Better Media Info",
        "theme": "Light",
        "width": 1200,
        "height": 900,
        "minWidth": 600,
        "minHeight": 450
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.caoccao.bettermi",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
